<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:theme="@style/ThemeOverlay.CSCI4176GroupProject.FullscreenContainer"
    tools:context=".FullscreenActivity"
    android:id="@+id/MainFullscreenContent">

    <!-- The primary full-screen view. This can be replaced with whatever view
         is needed to present your content, e.g. VideoView, SurfaceView,
         TextureView, etc. -->

    <!-- This FrameLayout insets its children based on system windows using
         android:fitsSystemWindows. -->

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true">




        <LinearLayout
            android:id="@+id/fullscreen_content_controls"
            style="@style/Widget.Theme.CSCI4176GroupProject.ButtonBar.Fullscreen"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center_horizontal"
            android:orientation="horizontal"
            tools:ignore="UselessParent">

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/SettingsButton"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="315sp"
                android:layout_marginTop="22sp"
                android:background="@drawable/settingsicon" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="45sp"
                android:textSize="45sp"
                android:textColor="@color/black"
                android:textStyle="bold|italic"
                android:fontFamily="serif-monospace"
                android:text="Colour Slide" />

            <ImageButton
                android:id="@+id/shoppingcartButton"
                android:layout_width="68dp"
                android:layout_height="64dp"
                android:color="#FFFFFF"
                android:layout_marginTop="300sp"
                android:layout_marginLeft="115sp"
                android:background="@drawable/shoppingcart"/>


            <ImageButton
                android:id="@+id/menuButton"
                android:layout_width="68dp"
                android:layout_height="64dp"
                android:layout_marginTop="-63sp"
                android:layout_marginLeft="225sp"
                android:background="@drawable/menuselect"
                android:color="#FFFFFF" />

            <Button
                android:id="@+id/playButton"
                android:layout_width="209dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:layout_marginTop="40dp"
                android:color="@color/lightSky_blue"
                android:text="Play"
                android:textStyle="bold|italic"
                android:typeface="serif"
                android:textSize="34sp" />

        </LinearLayout>









    </FrameLayout>
</FrameLayout>